{
    "manifest_version": 2,
    "name": "Performance Watcher",
    "version": "0.1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "./icons/icon-16x16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "inject-script.js"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "PerfWatch"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ]
}